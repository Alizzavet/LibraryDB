<Window x:Class="Library.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditUserWindow" Height="450" Width="600">
    <Grid>
        <Button x:Name="ViewUsersButton" Content="Просмотреть пользователей" HorizontalAlignment="Left" Margin="78,376,0,0" VerticalAlignment="Top" Width="176" Click="ViewUsersButton_Click" Height="20"/>
        <Button x:Name="BackButton" Content="Назад" HorizontalAlignment="Left" Margin="417,376,0,0" VerticalAlignment="Top" Width="105" Click="BackToAdminWindow_Click" Height="20" RenderTransformOrigin="-9.172,5.57" />
        <DataGrid x:Name="dataGrid" IsReadOnly="True" HorizontalAlignment="Center" VerticalAlignment="Top" Height="314" Width="550" Margin="0,28,0,0">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Добавить" Click="Add_Click"/>
                    <MenuItem Header="Редактировать" Click="Edit_Click"/>
                    <MenuItem Header="Удалить" Click="Delete_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
    </Grid>
</Window>
