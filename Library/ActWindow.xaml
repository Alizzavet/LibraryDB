<Window x:Class="Library.ActWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="ActWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dataGrid" IsReadOnly="True" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" Height="477" Width="728">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Добавить" Click="Add_Click"/>
                    <MenuItem Header="Редактировать" Click="Edit_Click"/>
                    <MenuItem Header="Удалить" Click="Delete_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
        <Button Content="Загрузить данные" HorizontalAlignment="Center" Margin="0,41,0,0" VerticalAlignment="Top" Width="120" Click="LoadData_Click"/>
    </Grid>
</Window>
