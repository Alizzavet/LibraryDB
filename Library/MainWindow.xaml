<Window x:Class="Library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
         Title="Вход в систему" Height="300" Width="400">
    <Grid>
        <Label Content="Логин:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsername" Text ="PetrovLibra" HorizontalAlignment="Left" Height="23" Margin="70,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Пароль:" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPassword" Password = "securepass" HorizontalAlignment="Left" Margin="70,52,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnSubmit" Content="Войти" HorizontalAlignment="Left" Margin="70,100,0,0" VerticalAlignment="Top" Width="75" Click="btnSubmit_Click"/>
    </Grid>
</Window>
