<Window x:Class="Library.DemonstrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="DemonstrationWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Name="YearTextBox" Text="Введите год" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <Button Name="ShowYearButton" Content="Показать" Click="ShowYearButton_Click" />
            <TextBox Name="GenreTextBox" Text="Введите жанр" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <Button Name="ShowGenreButton" Content="Показать" Click="ShowGenreButton_Click" />
            <ComboBox Name="LibrarianComboBox" />
            <DatePicker Name="StartDatePicker" />
            <DatePicker Name="EndDatePicker" />
            <Button Name="ShowReadersButton" Content="Показать читателей" Click="ShowReadersButton_Click" />
            <DatePicker Name="FirstDatePicker" />
            <DatePicker Name="SecondDatePicker" />
            <Button Name="ShowWorkloadButton" Content="Показать выработку" Click="ShowWorkloadButton_Click" />
            <DataGrid Name="ResultDataGrid" />
        </StackPanel>
    </Grid>
</Window>
