<Window x:Class="Library.LibraryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="LibraryWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnLibraryEvents" Content="Мероприятия" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="btnLibraryEvents_Click"/>
        <Button x:Name="btnSubscriptions" Content="Абонементы" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="75" Click="btnSubscriptions_Click"/>
        <Button x:Name="RegisterActs" Content="Оформить выдачу/возврат" HorizontalAlignment="Left" Margin="543,363,0,0" VerticalAlignment="Top" Width="204" Height="35" Click="btnExecutionAct_Click"/>
        <DataGrid x:Name="dataGrid" IsReadOnly="True" HorizontalAlignment="Left" Margin="122,10,0,0" VerticalAlignment="Top" Height="313" Width="653">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Добавить" Click="Add_Click"/>
                    <MenuItem Header="Редактировать" Click="Edit_Click"/>
                    <MenuItem Header="Удалить" Click="Delete_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
    </Grid>
</Window>
